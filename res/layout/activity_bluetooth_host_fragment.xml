<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_bluetooth_startServer"
            android:id="@+id/btn_bluetooth_startServer"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/listText"
            android:onClick="startServer"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_bluetooth_wait" android:layout_below="@+id/btn_bluetooth_startServer"
            android:layout_centerHorizontal="true" android:layout_marginTop="32dp" android:textSize="@dimen/listText"/>
</RelativeLayout>

