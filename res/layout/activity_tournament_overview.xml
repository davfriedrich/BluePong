<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <Button
        android:id="@+id/tournamentOverviewStartGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:background="@android:color/transparent"
        android:onClick="startGame"
        android:text="@string/tournamentOverviewStartGameButtonString"
        android:textSize="@dimen/buttonText"/>

    <TextView
        android:id="@+id/tournamentOverviewNextPlayerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textSize="@dimen/buttonText"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tournamentOververviewNextGameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tournamentOverviewNextPlayerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:text="@string/tournamentOverviewNextGameString"
        android:textColor="@color/bluepongBlue"/>

</RelativeLayout>
